<?xml version="1.0" encoding="UTF-8"?>
<extension version="3.0" type="plugin" group="jsnimageshow" method="upgrade">
	<name>Theme Flow</name>
	<version>1.0.1</version>
	<creationDate>02/05/2013</creationDate>
	<copyright>Copyright (c) 2008 - 2013 - JoomlaShine.com</copyright>
	<license>GNU/GPL v2 http://www.gnu.org/licenses/gpl-2.0.html</license>
	<author>JoomlaShine.com</author>
	<authorEmail>admin@joomlashine.com</authorEmail>
	<authorUrl>http://www.joomlashine.com</authorUrl>
	<description>JSN IMAGESHOW SHOWCASE THEME FLOW PLUGIN</description>
	<files>
		<filename plugin="themeflow">themeflow.php</filename>
		<filename plugin="themeflow">install.mysql.sql</filename>
		<filename plugin="themeflow">install.sqlsrv.sql</filename>
		<filename plugin="themeflow">uninstall.mysql.sql</filename>
		<filename plugin="themeflow">uninstall.sqlsrv.sql</filename>
		<filename plugin="themeflow">install.class.php</filename>
		<folder>assets</folder>
		<folder>classes</folder>
		<folder>helper</folder>
		<folder>languages</folder>
		<folder>models</folder>
		<folder>sql</folder>
		<folder>tables</folder>
		<folder>views</folder>
	</files>
	<install>
		<sql>
			<file charset="utf8" driver="mysql">install.mysql.sql</file>
			<file charset="utf8" driver="sqlsrv">install.sqlsrv.sql</file>
		</sql>
	</install>
	<uninstall>
		<sql>
			<file charset="utf8" driver="mysql">uninstall.mysql.sql</file>
			<file charset="utf8" driver="sqlsrv">uninstall.sqlsrv.sql</file>
		</sql>
	</uninstall>
	<scriptfile>install.class.php</scriptfile>
	<update>
		<schemas>
			<schemapath type="mysql">sql/updates/mysql</schemapath>
			<schemapath type="sqlsrv">sql/updates/sqlsrv</schemapath>
		</schemas>
	</update>
	<languages>
		<language tag="en-GB">languages/en-GB.plg_jsnimageshow_themeflow.ini</language>
	</languages>
</extension>